    "principles": [
        {
            "id": "P1",
            "number": 1,
            "category": "Human Rights",
            "title_en": "Businesses should support and respect the protection of internationally proclaimed human rights",
            "title_tr": "\u0130\u015fletmeler, uluslararas\u0131 d\u00fczeyde ilan edilmi\u015f insan haklar\u0131n\u0131 desteklemeli ve bu haklara sayg\u0131 g\u00f6stermelidir",
            "description_en": "Companies should support and respect internationally proclaimed human rights within their sphere of influence.",
            "description_tr": "\u015eirketler, etki alanlar\u0131 dahilinde uluslararas\u0131 d\u00fczeyde ilan edilmi\u015f insan haklar\u0131n\u0131 desteklemeli ve bu haklara sayg\u0131 g\u00f6stermelidir.",
            "evidence_required": [
                "policy",
                "training",
                "assessments",
                "monitoring"
            ]
        },
        {
            "id": "P2",
            "number": 2,
            "category": "Human Rights",
            "title_en": "Make sure that they are not complicit in human rights abuses",
            "title_tr": "\u0130nsan haklar\u0131 ihlallerine ortak olmad\u0131klar\u0131ndan emin olmal\u0131d\u0131rlar",
            "description_en": "Companies should ensure they are not complicit in human rights abuses.",
            "description_tr": "\u015eirketler, insan haklar\u0131 ihlallerine ortak olmad\u0131klar\u0131ndan emin olmal\u0131d\u0131r.",
            "evidence_required": [
                "due_diligence",
                "supply_chain_audit",
                "incident_reports",
                "corrective_actions"
            ]
        },
        {
            "id": "P3",
            "number": 3,
            "category": "Labour",
            "title_en": "Businesses should uphold the freedom of association and the effective recognition of the right to collective bargaining",
            "title_tr": "\u0130\u015fletmeler, \u00f6rg\u00fctlenme \u00f6zg\u00fcrl\u00fc\u011f\u00fcn\u00fc ve toplu pazarl\u0131k hakk\u0131n\u0131n etkin bir \u015fekilde tan\u0131nmas\u0131n\u0131 desteklemelidir",
            "description_en": "Companies should uphold the freedom of association and recognize the right to collective bargaining.",
            "description_tr": "\u015eirketler, \u00f6rg\u00fctlenme \u00f6zg\u00fcrl\u00fc\u011f\u00fcn\u00fc ve toplu pazarl\u0131k hakk\u0131n\u0131 tan\u0131mal\u0131d\u0131r.",
            "evidence_required": [
                "policy",
                "worker_representation",
                "collective_agreements",
                "grievance_mechanisms"
            ]
        },
        {
            "id": "P4",
            "number": 4,
            "category": "Labour",
            "title_en": "The elimination of all forms of forced and compulsory labour",
            "title_tr": "Her t\u00fcrl\u00fc zorla ve zorunlu \u00e7al\u0131\u015ft\u0131rman\u0131n ortadan kald\u0131r\u0131lmas\u0131",
            "description_en": "Companies should eliminate all forms of forced and compulsory labor.",
            "description_tr": "\u015eirketler, her t\u00fcrl\u00fc zorla ve zorunlu \u00e7al\u0131\u015ft\u0131rmay\u0131 ortadan kald\u0131rmal\u0131d\u0131r.",
            "evidence_required": [
                "policy",
                "risk_assessment",
                "supplier_audits",
                "remediation"
            ]
        },
        {
            "id": "P5",
            "number": 5,
            "category": "Labour",
            "title_en": "The effective abolition of child labour",
            "title_tr": "\u00c7ocuk i\u015f\u00e7ili\u011finin etkin bir \u015fekilde ortadan kald\u0131r\u0131lmas\u0131",
            "description_en": "Companies should support the effective abolition of child labor.",
            "description_tr": "\u015eirketler, \u00e7ocuk i\u015f\u00e7ili\u011finin etkin bir \u015fekilde ortadan kald\u0131r\u0131lmas\u0131n\u0131 desteklemelidir.",
            "evidence_required": [
                "policy",
                "age_verification",
                "supplier_monitoring",
                "remediation_programs"
            ]
        },
        {
            "id": "P6",
            "number": 6,
            "category": "Labour",
            "title_en": "The elimination of discrimination in respect of employment and occupation",
            "title_tr": "\u0130\u015f ve meslek a\u00e7\u0131s\u0131ndan ayr\u0131mc\u0131l\u0131\u011f\u0131n ortadan kald\u0131r\u0131lmas\u0131",
            "description_en": "Companies should eliminate discrimination in employment and occupation.",
            "description_tr": "\u015eirketler, i\u015f ve meslek a\u00e7\u0131s\u0131ndan ayr\u0131mc\u0131l\u0131\u011f\u0131 ortadan kald\u0131rmal\u0131d\u0131r.",
            "evidence_required": [
                "policy",
                "diversity_metrics",
                "training",
                "equal_pay_audit"
            ]
        },
        {
            "id": "P7",
            "number": 7,
            "category": "Environment",
            "title_en": "Businesses should support a precautionary approach to environmental challenges",
            "title_tr": "\u0130\u015fletmeler, \u00e7evresel sorunlara kar\u015f\u0131 ihtiyati yakla\u015f\u0131m\u0131 desteklemelidir",
            "description_en": "Companies should support a precautionary approach to environmental challenges.",
            "description_tr": "\u015eirketler, \u00e7evresel sorunlara kar\u015f\u0131 ihtiyati yakla\u015f\u0131m\u0131 desteklemelidir.",
            "evidence_required": [
                "policy",
                "risk_assessment",
                "environmental_management_system",
                "monitoring"
            ]
        },
        {
            "id": "P8",
            "number": 8,
            "category": "Environment",
            "title_en": "Undertake initiatives to promote greater environmental responsibility",
            "title_tr": "Daha b\u00fcy\u00fck \u00e7evresel sorumluluk bilincini geli\u015ftirmek i\u00e7in insiyatif almal\u0131d\u0131r",
            "description_en": "Companies should undertake initiatives to promote greater environmental responsibility.",
            "description_tr": "\u015eirketler, daha b\u00fcy\u00fck \u00e7evresel sorumluluk bilincini geli\u015ftirmek i\u00e7in insiyatif almal\u0131d\u0131r.",
            "evidence_required": [
                "initiatives",
                "targets",
                "certifications",
                "stakeholder_engagement"
            ]
        },
        {
            "id": "P9",
            "number": 9,
            "category": "Environment",
            "title_en": "Encourage the development and diffusion of environmentally friendly technologies",
            "title_tr": "\u00c7evre dostu teknolojilerin geli\u015ftirilmesini ve yay\u0131lmas\u0131n\u0131 te\u015fvik etmelidir",
            "description_en": "Companies should encourage the development and diffusion of environmentally friendly technologies.",
            "description_tr": "\u015eirketler, \u00e7evre dostu teknolojilerin geli\u015ftirilmesini ve yay\u0131lmas\u0131n\u0131 te\u015fvik etmelidir.",
            "evidence_required": [
                "rnd_investments",
                "technology_adoption",
                "partnerships",
                "innovation_metrics"
            ]
        },
        {
            "id": "P10",
            "number": 10,
            "category": "Anti-Corruption",
            "title_en": "Businesses should work against corruption in all its forms, including extortion and bribery",
            "title_tr": "\u0130\u015fletmeler, r\u00fc\u015fvet ve hara\u00e7 dahil olmak \u00fczere her t\u00fcrl\u00fc yolsuzlukla m\u00fccadele etmelidir",
            "description_en": "Companies should work against corruption in all its forms, including extortion and bribery.",
            "description_tr": "\u015eirketler, r\u00fc\u015fvet ve hara\u00e7 dahil olmak \u00fczere her t\u00fcrl\u00fc yolsuzlukla m\u00fccadele etmelidir.",
            "evidence_required": [
                "policy",
                "training",
                "due_diligence",
                "incident_reporting"
            ]
        }
    ],
